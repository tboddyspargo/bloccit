<%= content_tag :div, class: 'panel panel-default', id: "comment-#{comment.id}" do %>
  <div class="panel-body">
    <small><i><%= time_ago_in_words(comment.created_at) %> ago</i></small>
    <% if user_is_authorized_for_comment?(comment) %>
      <%= link_to [comment.post, comment], class: 'btn btn-xs btn-default pull-right', method: :delete do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    <% end %>
    <p><%= comment.body %></p>
    <div class="text-right">
      <small>â€“ <%= comment.user.name %></small>
    </div>
  </div>
<% end %>
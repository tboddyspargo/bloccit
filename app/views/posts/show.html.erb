<h1>
  <%= @post.title %> </br>
  <small>
    submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
  </small>
</h1>
<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if user_is_authorized_to_modify_posts?(@post) %>
      <%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %>
    <% end %>
    <% if user_is_authorized_for_posts?(@post) %>
      <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
    <% end %>
  </div>
</div>
</br>
<h3>Comments</h3>
<div class="row">
  <div class="col-md-8">
    <% @post.comments.each do |c| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <small><i><%= time_ago_in_words(c.created_at) %> ago</i></small>
          <p><%= c.body %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br/>
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: "media-project" %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, "post") %>,
          <%= pluralize(@user.comments.count, "comment") %>
        </small>
      </div>
    </div>
    <% if user_has_posts_or_comments %>
      <h2>Posts</h2>
      <%= render @user.posts %>
      
      <h2>Comments</h2>
      <%= render @user.comments %>
    <% else %>
      <br/><p><%= @user.name %> has not submitted any posts or comments yet.</p>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if @user.favorites.any? %>
      <h2>Favorites</h2>
      <% @user.favorites.each do |f| %>
        <%= render f.post %>
      <% end %>
    <% else %>
      <p><%= @user.name %> doesn't have any favorites yet.</p>
    <% end %>
  </div>
</div>
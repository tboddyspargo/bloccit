<h1>Advertisements#new</h1>
<%= form_for @advertisement do |a| %>
  <div class="form-group" >
    <%= a.label :title %>
    <%= a.text_field :title, class: "form-control", placeholder: "" %>
  </div>
  
  <div class="form-group">
    <%= a.label :body %>
    <%= a.text_area :body, class: "form-control", placeholder: "" %>
  </div>
  
  <div class="form-group">
    <%= a.label :price %>
    <%= a.number_field :price, class: "form-control", value: 0 %>
  </div>

  <div class="form_group">
    <%= a.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>